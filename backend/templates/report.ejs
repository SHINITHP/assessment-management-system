<!DOCTYPE html>
<html>
<head>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f9fafb;
      color: #1f2937;
    }
    .report-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }
    .header {
      text-align: center;
      padding: 20px 0;
      border-bottom: 2px solid #10b981;
      margin-bottom: 20px;
    }
    .header h1 {
      font-size: 24px;
      font-weight: 700;
      color: #1f2937;
      margin: 0;
    }
    .header .logo-placeholder {
      width: 100px;
      height: 50px;
      background-color: #e5e7eb;
      margin: 0 auto 10px;
      border-radius: 4px;
    }
    .section {
      margin-bottom: 30px;
    }
    .section h2 {
      font-size: 1.5rem;
      font-weight: 600;
      color: #1f2937;
      margin-bottom: 15px;
    }
    .data-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
    }
    .data-table th,
    .data-table td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #e5e7eb;
    }
    .data-table th {
      background-color: #f3f4f6;
      font-weight: 600;
      color: #374151;
    }
    .data-table tr:nth-child(even) {
      background-color: #f9fafb;
    }
    .data-table tr:hover {
      background-color: #eef2ff;
    }
    .data-table ul {
      margin: 0;
      padding-left: 20px;
    }
    .footer {
      text-align: center;
      padding: 20px 0;
      border-top: 1px solid #e5e7eb;
      color: #6b7280;
      font-size: 14px;
    }
  </style>
</head>
<body>
  <div class="report-container">
    <div class="header">
      <div class="logo-placeholder"></div>
      <h1><%= header %></h1>
    </div>
    <% sections.forEach((section, index) => { %>
      <div class="section" id="section-<%= index %>">
        <h2><%= section.title %></h2>
        <table class="data-table">
          <tr>
            <th>Field</th>
            <th>Value</th>
            <th>Classification</th>
          </tr>
          <% section.fields.forEach(field => { %>
            <tr>
              <td class="p-2"><%= field.label %></td>
              <td class="p-2">
                <% if (field.isArray) { %>
                  <ul class="list-disc">
                    <% field.value.forEach(item => { %>
                      <li><%= item %></li>
                    <% }) %>
                  </ul>
                <% } else { %>
                  <%= field.value %> <%= field.unit %>
                <% } %>
              </td>
              <td class="p-2 <%= field.colorClass %>"><%= field.classification %></td>
            </tr>
          <% }) %>
        </table>
      </div>
    <% }) %>
    <div class="footer">
      <%= footer %>
      <p>Contact: support@example.com | Generated: <%= new Date().toLocaleString() %></p>
    </div>
  </div>
</body>
</html>